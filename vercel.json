{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/(.*\\.[\\w]+)", "dest": "/$1" },   // let real files pass (js, css, images, etc.)
    { "src": "/(.*)", "dest": "/index.html" }     // SPA fallback
  ]
}
